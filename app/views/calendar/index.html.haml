.divide-y.divide-gray-200.overflow-hidden.rounded-lg.bg-white.shadow
  .px-4.py-5.sm:px-6
    .flex.items-center.justify-center
      .w-6.mr-3
        = link_to calendar_index_path(date: @date - 1.month), class: "w-5 h-5" do
          = image_tag 'icons/left_arrow.svg'
      %h2.flex.items-center.text-2xl.font-bold.leading-7.text-neutral-800.sm:text-3xl.sm:leading-9.sm:truncate
        = (l @date, format: :month_year)
      .w-6.ml-3
        = link_to calendar_index_path(date: @date + 1.month), class: "w-5 h-5" do
          = image_tag 'icons/right_arrow.svg'
.px-4.py-5.sm:p-6
  .mt-2.shadow.lg:flex.lg:flex-auto.lg:flex-col
    .grid.grid-cols-7.gap-px.border-b.border-gray-300.bg-gray-200.text-center.text-xs.font-semibold.leading-6.text-gray-700.lg:flex-none
      .bg-white.py-2
        = t 'calendar.monday.long'
      .bg-white.py-2
        = t 'calendar.tuesday.long'
      .bg-white.py-2
        = t 'calendar.wednesday.long'
      .bg-white.py-2
        = t 'calendar.thursday.long'
      .bg-white.py-2
        = t 'calendar.friday.long'
      .bg-white.py-2
        = t 'calendar.saturday.long'
      .bg-white.py-2
        = t 'calendar.sunday.long'
    = render 'calendar/large_calendar'
    = render 'calendar/mid_calendar'
  %ol.mt-10.divide-y.divide-gray-100.overflow-hidden.rounded-lg.bg-white.text-sm
    = turbo_frame_tag 'calendar_events_mid'
