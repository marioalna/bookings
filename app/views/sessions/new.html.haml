%section.h-full
  .flex.flex-col.items-center.justify-center.px-6.py-8.h-full.lg:py-0
    %div{class: form_card_class.render(padding: :spacious, width: :md)}
      %h1.text-xl.font-bold.leading-tight.tracking-tight.text-gray-900.md:text-2xl.text-center
        = t('sessions.form.signIn')
      = tw_form_with url: session_path, class: "mt-6 space-y-5" do |form|
        %div
          = form.email_input :email, placeholder: t('sessions.form.placeholderEmail'), value: params[:email]
        %div
          = form.password_input :password, autocomplete: "current-password", placeholder: "******", maxlength: 72
        .flex.items-center.justify-end
          %a.text-sm.font-medium.text-blue-600.hover:underline{:href => new_password_path}
            = t('sessions.form.forgotPassword')
        .mt-2
          = form.submit t('sessions.form.signInButton'), class: submit_button_class.render(style: :auth, size: :full)
          %p.text-sm.font-light.text-gray-500.mt-4.text-center
            = t('sessions.form.noAccount')
            %a.font-medium.text-blue-600.hover:underline{:href => "#"}
              = t('sessions.form.signUp')
