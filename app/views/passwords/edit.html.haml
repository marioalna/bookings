%section.h-full
  .flex.flex-col.items-center.justify-center.px-6.py-8.h-full.lg:py-0
    %div{class: form_card_class.render(padding: :spacious, width: :md)}
      %h1.text-xl.font-bold.leading-tight.tracking-tight.text-gray-900.md:text-2xl.text-center
        = t('passwords.form.update')
      = tw_form_with url: password_path(params[:token]), method: :put, class: "mt-6 space-y-5" do |form|
        %div
          = form.password_input :password, required: true, placeholder: t('passwords.form.placeholder1')
        %div
          = form.password_input :password_confirmation, required: true, placeholder: t('passwords.form.placeholder2')
        .mt-2
          = form.submit t('buttons.save'), class: submit_button_class.render(style: :auth, size: :full)
