%tr
  %td{class: td_class.render}
    = image_tag resource_image(resource), class: 'h-10 w-10 rounded'
  %td{class: td_class.render}
    = link_to bookings_path(resource_id: resource.id), class: link_class.render do
      = resource.name
  %td{class: td_class.render(text_align: :right)}
    = resource.max_capacity
  %td{class: td_class.render}
    .flex.gap-x-4.justify-end
      = render 'shared/button_edit', destination: edit_admin_resource_path(resource), data: { target: "_top" }
      = render 'shared/button_delete', destination: {model: [:admin, resource]}
